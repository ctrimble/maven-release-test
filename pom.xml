<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.meltmedia</groupId>
    <artifactId>meltmedia</artifactId>
    <version>10</version>
  </parent>

  <groupId>org.ctrimble.example</groupId>
  <artifactId>maven-release-example</artifactId>
  <version>1.1.0-SNAPSHOT</version>

  <name>Maven Release Plugin Example</name>

  <scm>
    <connection>scm:git:https://github.com/ctrimble/maven-release-test</connection>
    <developerConnection>scm:git:https://github.com/ctrimble/maven-release-test</developerConnection>
  </scm>

  <distributionManagement>
    <repository>
      <id>meltmedia-releases</id>
      <name>Meltmedia Release Repository [m2]</name>
      <url>http://localhost:8081/nexus/content/repositories/releases</url>
    </repository>
    <snapshotRepository>
      <id>meltmedia-snapshots</id>
      <name>Meltmedia Snapshot Repository [m2]</name>
      <url>http://localhost:8081/nexus/content/repositories/snapshots</url>
    </snapshotRepository>
  </distributionManagement>

  <properties>
    <java.source.version>1.6</java.source.version>
    <java.target.version>1.6</java.target.version>
  </properties>

</project>
